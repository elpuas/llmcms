---
import AppShell from '../components/AppShell.astro'
import MarkdownEditor from '../components/MarkdownEditor.jsx'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>LLMCMS - Local-First Content Management</title>
	</head>
	<body>
		<AppShell>
			<div slot="sidebar">
				<h3>Navigation</h3>
				<ul>
					<li><a href="#content">Content</a></li>
					<li><a href="#editor">Editor</a></li>
					<li><a href="#settings">Settings</a></li>
					<li><a href="#export">Export</a></li>
				</ul>
				
				<h3>Quick Actions</h3>
				<ul>
					<li><a href="#new">New Document</a></li>
					<li><a href="#save">Save</a></li>
					<li><a href="#preview">Preview</a></li>
				</ul>
			</div>
			
			<div slot="content">
				<h1>LLMCMS Editor</h1>
				<p>Welcome to your local-first content management system. Start editing below:</p>
				
								<div style="height: 600px; margin-top: 1rem;">
					<MarkdownEditor client:load />
				</div>
			</div>
		</AppShell>
	</body>
</html>
